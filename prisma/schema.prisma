generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Customer {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("customers")
}

model User {
  id              String      @id @default(uuid())
  email           String      @unique
  username        String      @unique
  password        String
  firstName       String
  lastName        String
  phone           String      @unique
  dob             DateTime?
  gender          Gender
  image           String?
  role            Role        @default(ATTENDANT)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  ownedShops      Shop[]      // Shops where user is admin
  worksAtShops    Shop[]      @relation("ShopAttendants")

  @@map("users")
}

model Shop {
  id              String      @id @default(uuid())
  name            String
  slug            String      @unique
  location        String
  adminId         String      
  admin           User        @relation(fields: [adminId], references: [id])
  attendants      User[]      @relation("ShopAttendants")
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@map("shops")
}

enum Gender {
  MALE
  FEMALE
}

enum Role {
  ADMIN
  ATTENDANT
}
